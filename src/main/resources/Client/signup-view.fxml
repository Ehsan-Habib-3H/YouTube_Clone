<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="backgroundGridPane" alignment="CENTER" prefHeight="641.0" prefWidth="1007.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.SignUpController">
    <stylesheets>
        <URL value="@login-signup.css" />
    </stylesheets>
    <BorderPane fx:id="backgroundBorderPane" layoutX="64.0" layoutY="73.0" prefHeight="455.0" prefWidth="892.0">
        <right>
            <VBox fx:id="signupVbox" alignment="CENTER" prefHeight="510.0" prefWidth="426.0" spacing="30.0" stylesheets="@login-signup.css" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets left="20.0" />
                </BorderPane.margin>
                <children>
                    <TextField fx:id="firstNameTextField" onKeyReleased="#firstNameChanged" prefHeight="50.0" prefWidth="451.0" promptText="First name" />
               <TextField fx:id="lastNameTextField"  layoutX="10.0" layoutY="50.0" prefHeight="50.0" prefWidth="451.0" promptText="Last Name (optional)" />
               <TextField fx:id="usernameTextField"  onKeyReleased="#usernameChanged" layoutX="10.0" layoutY="302.0" prefHeight="50.0" prefWidth="451.0" promptText="Username" />
               <TextField fx:id="emailTextField" onKeyReleased="#emailChanged" layoutX="10.0" layoutY="342.0" prefHeight="50.0" prefWidth="451.0" promptText="Email" />
               <PasswordField fx:id="passwordField" onKeyReleased="#passwordChanged" prefHeight="50.0" promptText="Password" />
               <HBox alignment="CENTER_RIGHT">
                  <children>
                     <Button fx:id="login" alignment="CENTER" layoutX="345.0" layoutY="20.0" minHeight="34.0" mnemonicParsing="false" onAction="#login" prefHeight="41.0" prefWidth="192.0" styleClass="secondary-button" text="I already have an account" textAlignment="CENTER">
                        <HBox.margin>
                           <Insets right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="signupButton" alignment="CENTER" minHeight="34.0" mnemonicParsing="false" onAction="#signup" prefHeight="53.0" prefWidth="91.0" styleClass="conformation-button" text="Sign Up" textAlignment="CENTER">
                        <HBox.margin>
                           <Insets top="10.0" />
                        </HBox.margin></Button>
                  </children>
               </HBox>
                </children>
                <padding>
                    <Insets bottom="30.0" top="40.0" />
                </padding>
            </VBox>
        </right>
        <padding>
            <Insets left="20.0" right="20.0" />
        </padding>
        <center>
         <GridPane fx:id="designGridBox" alignment="CENTER">
            <children>
                  <VBox fx:id="designVBox" alignment="CENTER_LEFT">
                      <ImageView fitHeight="29.0" fitWidth="181.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                          <image>
                              <Image url="@youtube-logo-white.png" />
                          </image>
                      </ImageView>
                  <Label fx:id="designLabel" alignment="CENTER" contentDisplay="TEXT_ONLY" styleClass="account-title" stylesheets="@login-signup.css" text="Create a YouTube&#13;Account" textFill="WHITE">
                     <font>
                        <Font size="45.0" />
                     </font></Label>
                  </VBox>
            </children>
            <columnConstraints>
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
         </GridPane>
        </center>
    </BorderPane>
   <padding>
      <Insets top="20.0" />
   </padding>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
    <!--  <padding>-->
    <!--    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />-->
    <!--  </padding>-->

</GridPane>
