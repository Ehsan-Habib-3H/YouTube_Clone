<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.web.WebView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Client.AddEditVideoView"
            prefHeight="400.0" prefWidth="600.0">

    <VBox fx:id="VControls">
        <TextField fx:id="TxtName" promptText="Name"/>
        <TextField fx:id="TxtDesc" promptText="Description"/>
        <CheckBox fx:id="CBIsPrivate" text="Is Private"> </CheckBox>
        <CheckBox fx:id="CBIsAgeRestricted" text="Is Age Restricted"> </CheckBox>
        <TextField fx:id="TxtDuration" disable="true" promptText="Duration"/>
        <CheckBox fx:id="CBIsShort" text="Is Short"> </CheckBox>
        <Button  fx:id="ChooseVideoBtn" onAction="#chooseFile" text="Choose Video"/>
        <Button onAction="#choosePictureFile" text="Choose Picture"/>
        <WebView disable="true"  prefHeight="139.49" prefWidth="248.0"  fx:id="profileWebView"/>
        <Button fx:id="SetDefaultThumbnailBtn" onAction="#setDefaultThumbnail" text="Set thumbnail based on video"/>
        <Button fx:id="SubmitBtn" onAction="#uploadVideo" text="Upload Video"/>
    </VBox>
</AnchorPane>
